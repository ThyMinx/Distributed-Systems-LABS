<Window x:Class="SignalRClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SignalRClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="447.059">
    <Grid>
        <TextBox x:Name="UsernameText" HorizontalAlignment="Left" Height="32" Margin="171,30,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="225"/>
        <Label Content="UserName" HorizontalAlignment="Left" Height="32" Margin="41,30,0,0" VerticalAlignment="Top" Width="125"/>
        <TextBox x:Name="MessageText" HorizontalAlignment="Left" Height="57" Margin="41,67,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="355"/>
        <ListBox x:Name="MessageList" HorizontalAlignment="Left" Height="216" Margin="41,182,0,0" VerticalAlignment="Top" Width="355"/>
        <Button x:Name="ConnectButton" Content="Connect" HorizontalAlignment="Left" Height="48" Margin="41,129,0,0" VerticalAlignment="Top" Width="176" Click="ConnectButton_Click"/>
        <Button x:Name="SendButton" Content="Send" HorizontalAlignment="Left" Height="48" Margin="222,129,0,0" VerticalAlignment="Top" Width="174" Click="SendButton_Click"/>

    </Grid>
</Window>
